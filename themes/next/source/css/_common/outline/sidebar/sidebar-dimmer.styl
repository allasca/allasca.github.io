.sidebar-dimmer {
  display: none;
}

+tablet-mobile() {
  .sidebar-dimmer {
    background: black;
    display: block;
    height: 100%;
    left: 0;
    opacity: 0;
    position: fixed;
    top: 0;
    transition: visibility .4s, opacity .4s;
    visibility: hidden;
    width: 100%;
    z-index: $zindex-1;

    .sidebar-active & {
      opacity: .7;
      visibility: visible;
    }
  }
}
